extends layout

block content
  h1= title
  p Welcome to the balls pug
   div(class="container-fluid")
        div(class="row")
            -
                let balls = [
                    {
                        "Itemname": "cricket ball",
                        "Quantity": 1,
                        "price": 11
                    },
                    {
                        "Itemname": "tennis ball",
                        "Quantity": 2,
                        "price": 12
                    },
                    {
                        "Itemname": "volley ball",
                        "Quantity": 3,
                        "price": 13
                    },                   
                ]
            each v,index in balls
                table(style='width:100%', border='1')
                  tr 
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`Your balls is ${intemNo + 1}`)
        }